{
  "ecmaFeatures": {
    "jsx": true,
    "es6": true,
    "classes": true
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "extends": ["standard", "standard-react"],
  "globals": {
    "React": true,
    "fetch": true
  },
  "rules": {
    "import/first": 0,
    "global-require": 0,
    "react/no-unused-prop-types": 0,
    "react/react-in-jsx-scope": 0
  }
}
